form(role='form', name='f', novalidate)
	.form-group
		label(for="name") Nom
		input#name.form-control(required, ng-model='user.name')
	.form-group
		label(for="role") RÃ´le
		select#role.form-control(ng-model='user.role')
			option(value='Client') Client
			option(value='Administrateur') Administrateur
			option(value='Responsable de stock') Responsable de stock
			option(value='Responsable de production') Responsable de production
	.form-group(ng-show='btnCaption !== "Modifier"')
		label(for="username") Nom d'utilisateur
		input#username.form-control(required, ng-model='user.username')
	.form-group
		label(for="password") Mot de passe
		input#password.form-control(required, type='password', ng-model='user.password')
	.form-group
		button.btn.btn-primary.btn-block.btn-lg(ng-click='save()') {{btnCaption}} 
			span.glyphicon.glyphicon-plus-sign
