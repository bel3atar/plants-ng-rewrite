form(novalidate, role='form')
	.form-group
		label(for='username') Nom d'utilisateur
		input#username.form-control(required, ng-model='user.username')
	.form-group
		label(for='password') Mot de passe
		input#password.form-control(type='password', required, ng-model='user.password')
	.form-group
		button.btn.btn-primary.btn-lg.btn-block(ng-click='login()') Se connecter 
			span.glyphicon.glyphicon-log-in
